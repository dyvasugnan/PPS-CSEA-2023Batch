\\Write a program for reading elements using pointer in to array and display the values using array.

#include <stdio.h>
#define MAX_SIZE 100 // Maximum array size
int main()
{
int arr[MAX_SIZE];
int N, i;
int * ptr = arr;
printf("Enter size of array: ");
scanf("%d", &N);
printf("Enter elements in array:\n");
for (i = 0; i < N; i++)
{
scanf("%d", (ptr + i));
}
printf("Array elements: ");
for (i = 0; i < N; i++)
{
printf("%d, ", *(ptr + i));
}
return 0;
}
